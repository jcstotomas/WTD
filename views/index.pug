doctype html 

html
    head 
    meta(charset='utf-8')
    title WTD
    //- //link(rel='stylesheet', type='text/css', href='/css/style.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")

body
    h1 WTD
    .container
        div
            fieldset
                form
                    input(type='radio', id = "eat", name = 'activity', value = "eat", checked ="checked") 
                    label(for="eat") Eat

                    input(type='radio', id = "activity", name = 'activity', value = "actvity") 
                    label(for="activity") Activity

                    input(type='radio', id = "add", name = 'activity', value = "add") 
                    label(for="addActivity") Add Activity
                    

        div(id = "foodSearch")
            fieldset
                form(action='/', method='post')
                    input.ghost-input(name='term', type='text', placeholder='Search a term', required)          
                    input.ghost-input(name='location', type='text', placeholder='Enter location', required)
                    input.ghost-button(type='submit', value='WTD')
                if (locationName)
                    p=locationName

        div(id = "activitySearch" style="display:none")
            fieldset
                form(action='/activity', method='post', onsubmit="return true")
                    input.ghost-button(type='submit', value = "WTD")

                if (activityName)
                    p=activityName

        div(id = "addActivity")
            fieldset
                form(action='/add', method='post')
                    input.ghost-input(name='term', type='text', placeholder='Add a term', required)          
                    input.ghost-button(type='submit', value='Add')
                if (addActivity)
                    p=addActivity



    script(src="index.js")

